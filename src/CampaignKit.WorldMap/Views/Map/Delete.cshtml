@model MapDeleteViewModel

@{
    ViewBag.Title = "Deleting " + Model.Name;
}

<div class="container">
    <div class="row">
        <div class="col-sm-1 col-md-2 col-lg-3">
        </div>
        <div class="col-sm-10 col-md-8 col-lg-6">
            <h2>@ViewBag.Title</h2>

            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <form method="post" asp-antiforgery="true" enctype="multipart/form-data">
                        <input asp-for="HiddenId" />
                        <input asp-for="HiddenSecret" />
                        <div class="form-group">
                            <label class="lead">Do you really want to delete the map @Model.Name?</label>
                        </div>
                        <div class="form-group">
                            <a class="btn btn-default" asp-action="Show" asp-route-id="@Model.HiddenId">Cancel</a>
                            <input class="btn btn-warning pull-right" type="submit" value="Delete" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-1 col-md-2 col-lg-3">
        </div>
    </div>
</div>